---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import NavPrimary from "../components/NavPrimary.astro";
import CloseMenu from "../components/CloseMenu.astro";
import "../styles/global.scss";
const { pageTitle } = Astro.props;
const pathname = Astro.url.pathname;
const currentPath = pathname.slice(1);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="progress-container fixed-top">
      <span class="progress-bar"></span>
    </div>
    <div class="app-root">
      <div class="app-container" data-container>
        <Header />
        <nav class="nav-primary">
          <NavPrimary />
        </nav>
        <main class="app-main">
          <section
            class="section"
            class={currentPath === "" ? "section-work" : "section"}
          >
            <h1 class="page-header">{pageTitle}</h1>
            <slot />
          </section>
        </main>
        <Footer />
      </div>
      <div class="nav-on-canvas" data-menu>
        <CloseMenu />
        <nav class="nav">
          <NavPrimary />
        </nav>
      </div>
      <script>
        import "../scripts/menu.js";
      </script>
    </div>
  </body>
</html>
